<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_closing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.messedup.messedup.admobs_activity.ClosingActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="false"
        android:id="@+id/cv_info"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="10dp"
        app:cardUseCompatPadding="false"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/InfoLayout">

                <ImageView
                    android:layout_width="match_parent"
                    android:id="@+id/BackImg"

                    android:src="@drawable/red_profile_background"
                    android:scaleType="centerCrop"
                    android:layout_height="95dp" />

                <TextView
                    android:id="@+id/ContactUsTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Closing Messed Up ..."
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:textSize="17sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/white"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/InfoTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="version 1.0.2"
                    android:textSize="12sp"
                    android:textStyle="normal|bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_alignTop="@+id/ContactUsTxtView"
                    android:visibility="invisible" />




            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
