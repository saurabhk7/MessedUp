<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/new_notif_icon_2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:src="@drawable/announcement_notif"
        android:padding="5dp" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mess Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/messDetailsTxt"
                android:textSize="16sp"
                android:padding="1dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:textColor="@color/colorPrimary"
                 />

            <TextView
                android:text="Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_txt_view"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:gravity="end"
                android:textColor="@color/app_green"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/platetype_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#353535"
            android:padding="1dp"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:text="PlateType"
            android:layout_marginStart="2dp"/>

            <TextView
                android:text="Transaction ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/transid_txt_view"
                android:layout_marginStart="5dp"
                android:padding="2dp"
                android:gravity="end"
                android:textColor="@color/app_green"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="textEnd"
                android:textSize="12sp" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>