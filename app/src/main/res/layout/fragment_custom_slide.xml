<?xml version="1.0" encoding="utf-8"?>
<agency.tango.materialintroscreen.parallax.ParallaxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/deal"
            android:id="@+id/handshakeimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/handshakeimg"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                app:layout_parallaxFactor="0.4"
                app:buttonTint="@color/white" />

            <TextView
                android:text="Terms and Conditions"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/grey_300"
                android:textColorLink="#FFFFFF"
                android:gravity="center"
                app:layout_parallaxFactor="0.6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/termsend" />




        </LinearLayout>

    </RelativeLayout>


</agency.tango.materialintroscreen.parallax.ParallaxLinearLayout>