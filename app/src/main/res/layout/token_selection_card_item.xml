<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f4f4"
    android:paddingTop="4dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="30dp"
        android:id="@+id/cv"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="0dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            tools:clickable="false">




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_below="@id/SpecialImgView"
                android:layout_height="wrap_content"
                android:id="@+id/SpecialLayout"
                android:clickable="false"
                tools:clickable="false">


            </LinearLayout>



            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:id="@+id/below_mess_name_view"
                android:elevation="0dp"
                android:layout_below="@id/SpecialLayout"
                android:background="@drawable/shadow"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:clickable="false"
                tools:clickable="false" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8">



                        <TextView
                            android:text="Oh snap, Token details not found!"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mess_name"
                            android:id="@+id/menuTxtViewCard"
                            android:textSize="16.5sp"
                            android:textColor="#606060" />

                        <TextView
                            android:text="Anand Food Xprs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/mess_name"
                            android:gravity="bottom"
                            android:textSize="16.5sp"
                            android:textColor="#606060"
                            android:clickable="false"
                            tools:clickable="false" />




                </RelativeLayout>

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button2"
                    android:layout_width="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    app:backGroundColor="@color/colorAccent"
                    app:textSize="6sp"
                    app:textColor="#FFF"
                    app:initialNumber="0"
                    app:finalNumber="1000"
                    android:layout_height="30dp" />


            </LinearLayout>


            <TextView
                android:text=" â‚¹75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/costTextView"
                android:padding="5dp"
                android:layout_alignRight="@id/SpecialImgView"
                android:layout_alignBottom="@+id/SpecialImgView"
                android:textStyle="normal|bold"
                android:visibility="gone"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="1dp" />





            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:rotation="-135"
                android:background="@drawable/triangle"
                android:visibility="gone"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>